#!/usr/bin/env bash

sudo apt install ninja-build gettext cmake curl build-essential git

git clone -b v0.11.5 https://github.com/neovim/neovim.git ~/personal/neovim
cd ~/personal/neovim

make CMAKE_BUILD_TYPE=RelWithDebInfo
sudo make install

